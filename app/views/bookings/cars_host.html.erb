<div class="headings">
  <h1>My cars booking list</h1>
  <p>Look all bookings do you have to your cars</p>
</div>

<div class="cards-container">

    <div class="cards">

      <% @bookings.each do |booking| %>

        <%= link_to cars_host_bookings_path, class: "card-link" do %>

          <div class="card" style= "width: 18rem;">
            <%= cl_image_tag booking.car.photo.key, class: "card-img", crop: :fill %>
            <div class="card-body">
              <p><%= booking.pick_up_date %></p>
              <p><%= booking.drop_of_date %></p>
              <p><%= booking.location %></p>
              <p><%= booking.status %></p>
            </div>
          </div>
        <% end %>

      <% end %>

    </div>

</div>
