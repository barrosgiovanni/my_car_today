

<div class="modal fade" id="new_booking_modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Let's booking a car</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>

      <%= simple_form_for booking do |f| %>
        <div class="modal-body">
          <%= f.association :car, collection: Car.all.order(:price, :brand, :model, :year, :color, :category, :photos), prompt: "Select a ", input_html: { data: { controller: "tom-select" } } %>
          <%= f.input :comment, placeholder: "What's car do you want rent?" %>
        </div>
        <div class="modal-footer">
          <%= f.submit "Add a booking", class: "btn btn-flat" %>
          <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Back</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
